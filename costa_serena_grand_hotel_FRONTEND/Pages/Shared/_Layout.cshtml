@using costa_serena_grand_hotel_FRONTEND.Services
@inject AuthSession AuthSession

<!doctype html>
<html lang="hu">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Costa Serena Grand Hotel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>

<body class="bg-black text-white">
    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ====== KÉPNAGYÍTÓ OVERLAY (globális) ====== -->
    <div id="imgModal" class="img-modal" onclick="closeImage()">
        <img id="imgModalContent" alt="Nagyított kép" onclick="event.stopPropagation();" />
    </div>

    <script>
        function openImage(src) {
            const modal = document.getElementById("imgModal");
            const img = document.getElementById("imgModalContent");

            img.src = src;
            modal.style.display = "flex";
            document.body.style.overflow = "hidden";
        }

        function closeImage() {
            const modal = document.getElementById("imgModal");
            const img = document.getElementById("imgModalContent");

            modal.style.display = "none";
            img.src = "";
            document.body.style.overflow = "";
        }

        document.addEventListener("keydown", function (e) {
            if (e.key === "Escape") closeImage();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>